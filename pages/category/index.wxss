.category{
  display: flex;
  /* flex-direction: row; */
  height: 100%;
}
.navLeft{
  background: #f8f8f8;
  width: 24%;
  height: 100%;
  white-space: nowrap;
}
.navRight{
  background: #fff;
  width: 76%;
  height: 100%;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
/* left */
.leftItem{
  font-size: 28rpx;
  color: #333;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
/* 选中 */
.item-active{
  background-color: #fff;
  color: #e93b3d;
}
/* right */
.item{
  margin: 40rpx 16rpx 0;
}
.wrap{
  overflow: hidden;
  padding: 20rpx 20rpx 0;
}
.item .title{
  font-size: 28rpx;
  height: 60rpx;
  line-height: 30rpx;
  font-weight: 700;
  color: #080808
}
.list{
  width: 32.8%;
  float: left;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.list-img{
  width: 150rpx;
  height: 150rpx;
}
.list-text{
  text-align: center;
  font-size: 24rpx;
  color: #686868;
  margin-top: 10rpx;
  height: 70rpx;
}